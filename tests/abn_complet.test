#!/bin/sh
set -e

valgrind --error-exitcode=1 --leak-check=full --show-leak-kinds=all \
  ./a2c tests/abn_complet.algo > tests/abn_complet.c
gcc -g -std=c99 tests/arbrebin.c -o tests/arbrebin
valgrind --error-exitcode=1 --leak-check=full --show-leak-kinds=all \
  ./tests/abn_complet | diff tests/abn_completexp -

set +e
